{
    "Parameters": {
        "ResourcePrefix": {
            "Type":"String",
            "Description": "The prefix text to add to the end of resource names. This is useful for creating parallel stacks for environments.",
            "Default": ""
        },
        "Version": {
            "Type":"String",
            "Description": "The version of the package. Used for setting the index of the docs website."
        }
    },
    "Conditions": {
        "AddResourcePrefix" : {"Fn::Not" : [{"Fn::Equals" : [{"Ref" : "ResourcePrefix"}, ""]}] }
    },
    "Resources": {
        "Bucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": { 
                    "Fn::If" : [
                        "AddResourcePrefix", 
                        { "Fn::Join": [ "-", [ {"Ref" : "ResourcePrefix"}, "nvoy" ] ]},
                        "nvoy"
                    ] 
                },
                "AccessControl" : "PublicRead",
                "WebsiteConfiguration": {
                    "IndexDocument": "index.html" }
                }
            }
        },
        "BucketPolicy": {
            "Type" : "AWS::S3::BucketPolicy",
            "Properties" : {
               "Bucket" : {"Ref" : "Bucket"},
               "PolicyDocument": {
                "Statement":[{
                  "Sid" : "AddPerm",
                  "Action":["s3:GetObject"],
                  "Effect":"Allow",
                  "Resource": { "Fn::Join" : ["", ["arn:aws:s3:::", { "Ref" : "Bucket" } , "/*" ]]},
                  "Principal":"*"
                }]
              }
            }
         }    
    },
    "Outputs" : {
        "IndexDocument" : {
          "Description" : "Information about the value",
          "Value" : { "Fn::GetAtt" : [ "Bucket", "DNSName" ]}
        }
    }
}